# MariaDB Galera Cluster Environment Variables
# Copy this file to .env and modify the values according to your setup

# Database Configuration
MYSQL_ROOT_PASSWORD=rootpassword123
MYSQL_DATABASE=testdb
MYSQL_USER=appuser
MYSQL_PASSWORD=apppassword123

# Host IP Addresses - Replace with your actual server IPs
HOST1_IP=192.168.1.100
HOST2_IP=192.168.1.101

# Galera Cluster Configuration
CLUSTER_NAME=mariadb_galera_cluster

# SST (State Snapshot Transfer) Configuration
SST_USER=sst_user
SST_PASSWORD=sst_password

# Monitoring Configuration
MONITOR_USER=monitor
MONITOR_PASSWORD=monitor_password

# Replication Configuration
REPL_USER=repl_user
REPL_PASSWORD=repl_password

# Network Configuration
GALERA_SUBNET=172.20.0.0/16
GALERA_GATEWAY=172.20.0.1
NODE1_IP=172.20.0.10
NODE2_IP=172.20.0.11

# Bootstrap Configuration
# Set to 'yes' ONLY for disaster recovery when ALL nodes are down
# Set ONE node to 'yes' to bootstrap the cluster, then set back to 'no'
# Normal operation: both should be 'no'
BOOTSTRAP_NODE1=no
BOOTSTRAP_NODE2=no
